from sys import argv

script, filename = argv

txt1 = open(filename)

#Printing the first 30 characters in the text file.
print txt1.read(30)

#Printing the first two lines in the text file.
txt2 = open(filename)

print txt2.readline()
print txt2.readline()
print txt2.readline()

#Printing the whole file.

txt3 = open(filename)
for x in txt3:
    print(x)
