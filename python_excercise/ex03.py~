print "I will now count my chickens:"

# Performing division & addition operation
print "Hens", 20 + 30 / 6

# Performing modulus, multiplication & subtraction operation
print "Roosters",100 - 25 * 3 % 4.333

print "Now I will count my eggs:"
# Performing modulus, division, subtraction & addition operation
print "Total number of eggs:", 3 + 1 + 2 - 5 + 4 % 2 - 1 / 4 + 6

# Performing comparison operation
print "Is it true that  3 + 2  < 5 - 7?"
print 3 + 2 < 5 - 7

# Performing addition operation
print "What is 3 + 2.99 = ", 3 + 2.99

# Performing subtraction operation
print "What is 5.567 - 7.985345 = ", 5.567 - 7.985345

# Performing comparison operation
print "Is it greater 5 > -2 = ", 5 > -2

# Performing comparison operation
print "Is it greater than or equal 5 >= 2 =", 5 >= 2

# Performing comparison operation
print "Is it less than or equal 5 <= -2 =", 5 <= -2

# Performing comparison operation
print "Is it lesser 5 > -2 = ", 5 > -2

# Performing modulus operation
print "What is the remainder value for 388 % 5 = ", 388 % 5

# Performing division operation with integer values
print "The result for 59 / 5 = ", 59 / 5

# Performing division operation with float values
print "The result for 59.0 / 5.0 = ", 59.0 / 5.0
